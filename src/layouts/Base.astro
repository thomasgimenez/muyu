---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Muyu — Alimentos Fermentados",
  description = "Alimentos fermentados artesanales. Kombucha, kimchi, chucrut y más, elaborados con ingredientes naturales.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <link rel="icon" href={`${import.meta.env.BASE_URL}/favicon.ico`} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="min-h-screen font-sans">
    <slot />
  </body>
</html>
